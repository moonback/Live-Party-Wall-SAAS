{
  "name": "Partywall",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "main": "dist-electron/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "tsr:generate": "tsr generate",
    "preview": "vite preview",
    "generate:icons": "node scripts/generate-icons.js",
    "download:face-models": "node scripts/download-face-api-models.js",
    "electron:dev": "cross-env ELECTRON=true NODE_ENV=development vite",
    "electron:build": "cross-env ELECTRON=true vite build",
    "electron:pack": "npm run electron:build && electron-builder",
    "electron:dist": "npm run electron:build && electron-builder --publish=never"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@supabase/supabase-js": "2",
    "@tanstack/react-query": "^5.62.11",
    "@tanstack/react-router": "^1.150.0",
    "@tanstack/react-virtual": "^3.13.15",
    "@tanstack/router-plugin": "^1.150.0",
    "@types/file-saver": "^2.0.7",
    "face-api.js": "^0.22.2",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.24.7",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "to-ico": "^1.1.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.livepartywall.app",
    "productName": "Partywall",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "build/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
